class Node:
    def __init__(self,data):
        self.data=data
        self.next=None

class LinkedList:
    def __init__(self):
        self.head=None

    def append(self,data):
        n=Node(data)
        if not self.head: self.head=n; return
        t=self.head
        while t.next: t=t.next
        t.next=n

    def delete(self,key):
        t=self.head
        if t and t.data==key:       # delete head
            self.head=t.next; return
        prev=None
        while t and t.data!=key:    # find node
            prev=t; t=t.next
        if not t: return            # not found
        prev.next=t.next            # unlink

    def show(self):
        t=self.head
        while t: print(t.data,end=" -> "); t=t.next
        print("None")

# Example
ll=LinkedList()
for i in [10,20,30,40]: ll.append(i)
ll.show()
ll.delete(20)
ll.show()
