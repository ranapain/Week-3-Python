def add_two_numbers(l1, l2):
    dummy = Node(0)
    curr = dummy
    carry = 0

    while l1 or l2 or carry:
        x = l1.data if l1 else 0
        y = l2.data if l2 else 0

        total = x + y + carry
        carry = total // 10
        curr.next = Node(total % 10)

        curr = curr.next
        if l1: l1 = l1.next
        if l2: l2 = l2.next

    return dummy.next  
